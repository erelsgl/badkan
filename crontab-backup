SHELL=/bin/bash
PATH=/bin:/usr/bin:/usr/local/bin

# Backup each two hours:

1 */2 * * * cd badkan; start/export.sh 02-hours

# Backup each 8 hours:

21 */8 * * * cd badkan; start/export.sh 08-hours

# Backup each day:

41 1 * * * cd badkan; start/export.sh 24-hours

# Backup each 4 days:

41 3 */4 * * cd badkan; start/export.sh 96-hours
